{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist/",
    "rootDir": "src/",
    "paths": {
      "@hive-flow/api": ["../hiveflow-api/src"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "references": [
    {"path": "../hiveflow-api"}
  ],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"]
}
